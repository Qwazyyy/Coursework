<Page x:Class="Coursework.View.AddAndEditClientPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Coursework.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddAndEditClientPage" Background="White">

    <Grid>
        <StackPanel>
            <TextBlock Text="Введите имя клиента"/>
            <TextBox x:Name="FirstName" Style="{StaticResource TextBoxStyleOne}"/>
            <Rectangle Height="2" Stroke="MediumTurquoise" Margin="0,0,0,10"/>
            
            <TextBlock Text="Введите фамилию клиента"/>
            <TextBox x:Name="LastName" Style="{StaticResource TextBoxStyleOne}"/>
            <Rectangle Height="2" Stroke="MediumTurquoise" Margin="0,0,0,10"/>
            
            <TextBlock Text="Введите номер телефон клиента"/>
            <TextBox x:Name="PhoneNumber" Style="{StaticResource TextBoxStyleOne}"/>
            <Rectangle Height="2" Stroke="MediumTurquoise" Margin="0,0,0,10"/>
            
            <Button Content="Сохранить" Click="Button_Click_Save"/>
            <Button Content="Назад" Click="Button_Click_Back"/>
            <TextBlock x:Name="Status" Text="Данные сохранены" Visibility="Hidden" />
        </StackPanel>
    </Grid>
</Page>
